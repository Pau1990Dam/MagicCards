<?xml version="1.0" encoding="utf-8"?>
<layout>
    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/carta"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textColor="@color/colorWhite"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp"
            app:layout_constraintLeft_toLeftOf="@+id/guideline7"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:textAllCaps="true"
            android:textSize="16sp"
            android:textStyle="normal|bold" />

        <ImageView
            android:contentDescription="@string/altImage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/alt_cardback"
            android:id="@+id/imgUrl"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/guideline7"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/rarity"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/type"
            app:layout_constraintRight_toRightOf="@+id/type"
            app:layout_constraintLeft_toLeftOf="@+id/type"
            android:textColor="@color/colorListViewSecondaryText"
            android:textSize="14sp"
            android:textStyle="normal|bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/type"
            app:layout_constraintTop_toBottomOf="@+id/carta"
            android:layout_marginEnd="24dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="24dp"
            app:layout_constraintLeft_toLeftOf="@+id/guideline7"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintHorizontal_bias="0.4"
            android:textColor="@color/colorListViewSecondaryText"
            android:textSize="14sp"
            android:textStyle="normal|bold" />

        <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline7"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.33854166"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="130dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxHeight="50dp"
            android:id="@+id/colors"
            android:layout_marginEnd="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/guideline7"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/rarity"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:gravity="left"
            android:layout_marginBottom="24dp"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxHeight="50dp"
                android:id="@+id/color1"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxHeight="50dp"
                android:id="@+id/color2"
                android:layout_weight="1" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxHeight="50dp"
                android:id="@+id/color3"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxHeight="50dp"
                android:id="@+id/color4"
                android:layout_weight="1" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxHeight="50dp"
                android:id="@+id/color5"
                android:layout_weight="1" />

        </LinearLayout>

    </android.support.constraint.ConstraintLayout>
</layout>

